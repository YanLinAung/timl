(in-ns 'timl.core)

(defn key [x] (first x))
(defn val [x] (second x))
(defn sorter [>]
  (fn [x y]
    (if (> x y)
      1
      (if (> y x)
        -1
        0))))

(defn sort [xs & args]
  (if args
    (#*sort (#*copy (first args)) (sorter xs) {})
    (#*sort (#*copy xs))))

(defn get-in [m ks] (reduce get m ks))

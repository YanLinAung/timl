(def special-forms
  '[if do let fn def :
     quote syntax-quote unquote unquote-splicing function
     try catch finally])

(defmacro doc [sym]
  (let [topic (if (<= 0 (#*index special-forms sym))
                (str "timl-" sym))]
    `(do
       (throw (str "timl#repl: exit help " (or ~topic (#*substitute (str ~sym) #"^\w\+\zs$" "(" ""))))
       (throw "timl#repl: exit"))))
